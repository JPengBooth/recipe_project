<div>
  <div>
    <h1>
      List of all allergies
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new allergy
    </h2>

    <form action="/insert_allergy" method="post">
      <div>
        <input type="hidden" id="user_id_box" name="query_user_id" value="<%=@current_user.id%>">
      </div>

      <div>
        <label for="ingredient_id_box">
          Ingredient
        </label>

        <select id="name_box" name="query_ingredient_id">
          <% Ingredient.all.each do |an_ingredient| %>
          <option value="<%= an_ingredient.id %>">
            <%= an_ingredient.name %>
          </option>
          <% end %>
        </select>
      </div>

      <div>
        <label for="severity_box">
          Severity
        </label>

        <select type="text" id="severity_box" name="query_severity">
          <option>Mild</option>
          <option>Not great</option>
          <option>Total Disaster</option>
        </select>
      </div>

      <button>
        Create allergy
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          Ingredient
        </th>

        <th>
          Severity
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

    <% if @list_of_allergies == nil%>
      <div></div>
    <% else %>
      <% @list_of_allergies.each do |an_allergy| %>
      <tr>
        <td>
          <%= an_allergy.ingredient.name%>
        </td>

        <td>
          <%= an_allergy.severity %>
        </td>

        <td>
          <%= time_ago_in_words(an_allergy.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_allergy.updated_at) %> ago
        </td>
      </tr>
      <% end %>
    <% end %>
    </table>
  </div>
</div>

<hr>
