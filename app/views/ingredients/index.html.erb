<div>
  <div>
    <h1>
      List of all ingredients
    </h1>
  </div>
</div>

<% if @current_user == nil %>
  <div></div>
<% else%>
  <hr>
  <div>
    <h2>
      Add a new ingredient
    </h2>

    <form action="/insert_ingredient" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="ingredient_class_box">
          Ingredient class
        </label>

        <select type="text" id="ingredient_class_box" name="query_ingredient_class">
          <option>Dairy</option>
          <option>Carbohydrate</option>
          <option>Vegetables</option>
          <option>Meat</option>
          <option>Fish</option>
          <option>Seafood</option>
          <option>Nuts and Seeds</option>
        </select>
      </div>

      <button>
        Create ingredient
      </button>
    </form>
  </div>
<% end %>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Ingredient class
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_ingredients.each do |an_ingredient| %>
      <tr>
        <td>
          <%= an_ingredient.name %>
        </td>

        <td>
          <%= an_ingredient.ingredient_class %>
        </td>

        <td>
          <%= time_ago_in_words(an_ingredient.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_ingredient.updated_at) %> ago
        </td>

        <td>
          <a href="/ingredients/recipes/<%= an_ingredient.id %>">
            Show recipes
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
