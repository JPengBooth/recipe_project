<div>
  <div>
    <h1>
      My Favorite Recipes
    </h1>
  </div>
</div>

<hr>

<div>
</div>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          
        </th>

        <th>
          Recipe
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_bookmarks.each do |a_bookmark| %>
      <tr>
        <td>
          <img src="<%= a_bookmark.recipe.photo %>" width="200" height="270">
        </td>
        <td>
          <%= a_bookmark.recipe.name %>
        </td>

        <td>
          <%= time_ago_in_words(a_bookmark.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_bookmark.updated_at) %> ago
        </td>

        <td>
          <a href="/recipes/<%= a_bookmark.recipe_id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

