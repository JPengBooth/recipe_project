<div>
  <div>
    <h1>
      Usage #<%= @the_usage.id %> details
    </h1>

    <div>
      <div>
        <a href="/usages">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_usage/<%= @the_usage.id %>">
          Delete usage
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Recipe
      </dt>
      <dd>
        <%= @the_usage.recipe_id %>
      </dd>

      <dt>
        Ingredient
      </dt>
      <dd>
        <%= @the_usage.ingredient_id %>
      </dd>

      <dt>
        Amount
      </dt>
      <dd>
        <%= @the_usage.amount %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_usage.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_usage.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit usage
    </h2>

    <form action="/modify_usage/<%= @the_usage.id %>"  method="post" >
      <div>
        <label for="recipe_id_box">
          Recipe
        </label>

        <input type="text" id="recipe_id_box" name="query_recipe_id" value="<%= @the_usage.recipe_id %>">
      </div>

      <div>
        <label for="ingredient_id_box">
          Ingredient
        </label>

        <input type="text" id="ingredient_id_box" name="query_ingredient_id" value="<%= @the_usage.ingredient_id %>">
      </div>

      <div>
        <label for="amount_box">
          Amount
        </label>

        <input type="text" id="amount_box" name="query_amount" value="<%= @the_usage.amount %>">
      </div>

      <button>
        Update usage
      </button>
    </form>
  </div>
</div>

<hr>
